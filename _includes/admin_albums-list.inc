<div class="dashboard-main">    <div class="dashboard-title">        <h4 class="white">Gestion des albums d'image</h4>    </div>    <div class="dashboard-content">                <div class="d-form-cta header">            <div class="btn-primary small btn-add icon mobile-icon-only i-more js-content-add"><span>Ajouter un album</span></div>        </div>                <div class="content-add">            <form method="post" action="action_album_add" enctype="multipart/form-data">                <div class="d-form-wrapper">                    <h3>Ajouter un album</h3>                                        <div class="form-row column">                        <label>Titre de l'album (max : 80 caractères)</label>                        <input name="zt_title" type="text" maxlength="80" required>                    </div>                                </div>                <div class="d-form-cta">                    <div class="btn-primary btn-confirm small icon mobile-icon-only"><span>Enregistrer</span></div>                </div>                        </form>        </div>                <ul class="dashboard-list" id="results">            <?php                $stmt = $db->prepare("SELECT * from ALBUMS order by id_album ASC");                $stmt->execute();                                $results = $stmt->fetchAll(PDO::FETCH_ASSOC);                foreach ($results as $result) {                                        $album = $result['id_album'];                    $title = nl2br(stripslashes($result['album_title']));                                        echo "                    <li class='dashboard-list-elements layout-col-3'>                        <div class='list-cta content-icon'>                            <div>                                <form action='action_album_delete' method='post'>                                    <input type='hidden' name='element' value='$album'>                                    <div class='btn-tertiary btn-text small btn-delete icon'></div>                                </form>                            </div>                        </div>                        <div class='element-title content-element'>$title</div>                        <div class='list-cta content-btn'>                            <a class='btn-secondary small icon i-image mobile-icon-only' href='?p=68&album=$album'><span>Images</span></a>                            <div data-element='$album' class='btn-primary small btn-update icon js-content-update'><span>Modifier</span></div>                        </div>                        <div class='content-update content-update-$album'>                            <form method='post' action='action_album_update' enctype='multipart/form-data'>                                <input name='element' type='hidden' value='$album'>                                <div class='form-row column'>                                    <label>Modifier le nom de la catégorie (max : 80 caractères)</label>                                    <input id='album_title' name='zt_title' type='text' maxlength='80' value='$title' required>                                </div>                                <div class='d-form-cta'>                                    <div class='btn-secondary small btn-cancel icon mobile-icon-only js-cancel-update'><span>Annuler</span></div>                                    <div class='btn-primary small btn-confirm icon mobile-icon-only'><span>Mettre à jour</span></div>                                </div>                            </form>                        </div>                    </li>                                ";                }            ?>        </ul>        </div></div>