<ul class="edit-text-panel">    <li class="edit-panel-cta" id="edit_news-section_cta" title="Ajouter un titre"><i class="far fa-h3"></i></li>    <li class="edit-panel-cta" id="edit_news-quote_cta" title="Ajouter une citation"><i class="fas fa-quote-right"></i></i></li>    <li class="edit-panel-cta" id="edit_news-bold_cta" title="Mettre un texte en gras"><i class="fas fa-bold"></i></i></li>    <li class="edit-panel-cta" id="edit_news-link_cta" title="Ajouter un lien URL"><i class="fas fa-link"></i></i></li>    <li class="edit-panel-cta" id="edit_news-list" title="Ajouter une iste"><i class="fas fa-list"></i></i></li></ul><script type="text/javascript">    $(function () {        $( '#edit_news-section_cta' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<span class="news-section-header"> </span>' +textAfter );        });        $( '#edit_news-quote_cta' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<span class="news-quote">&laquo; &raquo;</span>' +textAfter );        });        $( '#edit_news-bold_cta' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<span style="font-weight:600"> </span>' +textAfter );        });        $( '#edit_news-link_cta' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<a class="news-external_link" href=""> </a>' +textAfter );        });        $( '#edit_news-list' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<ul class="news-list"> \n <li>REPLACE CONTENT HERE</li> \n </ul>' +textAfter );        });    });</script>