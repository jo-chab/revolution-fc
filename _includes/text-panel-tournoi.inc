<ul class="edit-text-panel">    <li class="edit-panel-cta" id="edit_news-subtitle" title="Ajouter un sous-titre"><i class="fa-regular fa-h3"></i></li>    <li class="edit-panel-cta" id="edit_news-paragraph" title="Ajouter un paragraphe"><i class="fa-regular fa-paragraph"></i></li>    <li class="edit-panel-cta" id="edit_news-bold_cta" title="Mettre un texte en gras"><i class="fa-solid fa-bold"></i></li>    <li class="edit-panel-cta" id="edit_news-list" title="Ajouter une liste"><i class="fa-solid fa-list"></i></li>    <li class="edit-panel-cta" id="edit_news-list_item" title="Ajouter un élément de liste"><i class="fa-regular fa-list-tree"></i></li></ul><script type="text/javascript">    $(function () {        $( '#edit_news-subtitle' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<h3>Mettre votre sous-titre ici</h3>\n' +textAfter );        });        $( '#edit_news-paragraph' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<p>Écrire votre paragraphe a l\'intérieur</p>\n' +textAfter );        });        $( '#edit_news-bold_cta' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<span class="text-highlight"> </span>' +textAfter );        });        $( '#edit_news-list' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '<ul class="news-list">\n \t<li>Ajouter vos elements ici</li> \n </ul>\n' +textAfter );        });        $( '#edit_news-list_item' ).on('click', function(){            var cursorPos = $('#zt_text').prop('selectionStart');            var v = $('#zt_text').val();            var textBefore = v.substring(0,  cursorPos );            var textAfter  = v.substring( cursorPos, v.length );            $('#zt_text').val( textBefore+ '\n \t<li>Ajouter vos elements ici</li>' +textAfter );        });    });</script>